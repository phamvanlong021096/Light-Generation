<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/ic_close_test"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/ic_close_circle" />

    <ImageView
        android:id="@+id/ic_volume"
        android:src="@drawable/ic_volume"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@id/ic_close_test"
        android:layout_width="48dp"
        android:layout_height="48dp" />

    <TextView
        android:id="@+id/tv_category_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Gia đình"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/tv_text_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_category_question"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Đố bé biết đâu là đôi đũa?"
        android:textColor="@color/colorAccent" />

    <com.lightgeneration.kid_locker.custom.Diano
        android:id="@+id/diano"
        android:layout_width="128dp"
        android:layout_height="132dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="10dp" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tv_text_question"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:layout_toEndOf="@id/diano"
        android:layout_toRightOf="@id/diano">

        <LinearLayout
            android:id="@+id/ll_ques_horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:visibility="gone">

            <RelativeLayout
                android:id="@+id/ans_hori_1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/background_00">

                <ImageView
                    android:id="@+id/img_ans_hori_1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:src="@drawable/dino_dance_00" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/ans_hori_2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/background_00">

                <ImageView
                    android:id="@+id/img_ans_hori_2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:src="@drawable/dino_dance_00" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/ans_hori_3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/background_00">

                <ImageView
                    android:id="@+id/img_ans_hori_3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:src="@drawable/dino_dance" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/ans_hori_4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/background_00">

                <ImageView
                    android:id="@+id/img_ans_hori_4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:src="@drawable/dino_dance" />
            </RelativeLayout>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_ques_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/ans_verti_1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:background="@drawable/background_00">

                <ImageView
                    android:id="@+id/img_ans_verti_1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:src="@drawable/dino_dance_00" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/ans_verti_2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:background="@drawable/background_00">

                <ImageView
                    android:id="@+id/img_ans_verti_2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:src="@drawable/dino_dance_00" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/ans_verti_3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:background="@drawable/background_00">

                <ImageView
                    android:id="@+id/img_ans_verti_3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:src="@drawable/dino_dance" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/ans_verti_4"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:background="@drawable/background_00">

                <ImageView
                    android:id="@+id/img_ans_verti_4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:src="@drawable/dino_dance" />
            </RelativeLayout>
        </LinearLayout>
    </FrameLayout>
</RelativeLayout>
