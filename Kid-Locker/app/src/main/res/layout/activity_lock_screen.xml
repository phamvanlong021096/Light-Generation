<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <TextView
        android:layout_width="match_parent"
        android:id="@+id/tv_category_question"
        android:text="Gia đình"
        android:textSize="20dp"
        android:gravity="center"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="wrap_content"
        android:text="Đố bé biết đâu là đôi đũa?"
        android:textColor="@color/colorAccent"
        android:layout_below="@+id/tv_category_question"
        android:id="@+id/tv_title_question"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_height="wrap_content" />
    <com.lightgeneration.kid_locker.custom.Diano
        android:layout_width="150dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="50dp"
        android:layout_height="150dp" />
</RelativeLayout>
